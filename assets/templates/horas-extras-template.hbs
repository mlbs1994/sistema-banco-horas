<div class="table-hr-extra">
    <div class="table-title">
        <h4 class="h4">Horas Extras</h4>
    </div>
    <div class="funcionario-marc-grid">
        <label for="funcionarios">Funcionario</label>
        <select id="funcionarios" name="funcionarios" class="select2 custom-select" data-live-search="true">
            <option value="">Todos</option>
            {{#each dados.funcionarios}}
             <option value="{{nome}}">{{nome}}</option>
            {{/each}}
        </select>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Nome</th>
                <th scope="col">Data</th>
                <th scope="col">Horário Inicio</th>
                <th scope="col">Horário Fim</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody id="tab-horas-extras-body">
            {{#each dados.registros}}
            <tr class="dados" data-funcionario="{{funcionario-nome}}">
                <td>{{funcionario-nome-hora-extra}}</td>
                <td>{{data-marcacao-hora-extra}}</td>
                <td>{{horario-inicio-hora-extra}}</td>
                <td>{{horario-fim-hora-extra}}</td>
                <td>
                    <a class="modalButton edit-func" href="#" data-target="#formFuncionarioModal"><span class="material-icons edit">edit</span></a>
                    <a class="modalButton del-func" href="#" data-target="#exclusaoModal"><span class="material-icons delete">delete</span></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
<script src="/assets/js/templates.js"></script>
<script src="/assets/js/templates-select2.js"></script>
<script src="/assets/js/paginacao.js"></script>